<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/speed"
        android:id="@+id/textView"/>

    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/speedBar"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/volLabel"
            android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volume"
            android:id="@+id/volLabel"
            android:layout_below="@+id/speedBar"
            android:layout_alignLeft="@+id/volBar"
            android:layout_marginTop="10dp"/>
    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/volBar"
            android:layout_below="@+id/volLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play"
            android:id="@+id/togglePlayButton"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/volBar"
            android:layout_alignLeft="@+id/volBar"/>


</RelativeLayout>
